<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.email_field :email, class:"form_control", placeholder:"Email",autocomplete:"email" %>
  </div>

  <div class="mb-3">
    <%= f.password_field :password, placeholder:"Password",autocomplete:"current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3">
      <%= f.check_box :remember_me%>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-secondary" %>
  </div>
<% end %>

<br/><br/>
<%= render "devise/shared/links" %>
